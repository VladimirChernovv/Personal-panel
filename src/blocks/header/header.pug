include  ../../components/title/title

mixin header(bem, data)
  +b('header', {t: 'header'})
    +e('top-block')
      +e('container')
        +e('wrapper')
          +e('button', {t: 'a'})(href='#')
            +e('image', {t: 'img'})(src='/img/header/arrow_left.png')
            +e('text', {t: 'p'}) Вернуться на гланвую
          +e('navigation', {t: 'nav'})
            +e('list', {t: 'ul'})
              +e('item', {t: 'li'})
                +e('link', {t: 'a'}) Поиск
              +e('item', {t: 'li'})
                +e('link', {t: 'a'}) En
              +e('item', {t: 'li'})
                +e('link', {t: 'a'}) Выход
          +e('humburger', {b: 'line'}, 'button')(type='button')
            +e('image', {t: 'img'})(src='/img/header/open-menu.svg')
